<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>New Comments on LibertySoil.org</title>
  <link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet" type="text/css">
  <%- include('partials/common-styles') %>
</head>
<body style="-webkit-text-size-adjust: 100%;-ms-text-size-adjust: 100%;margin: 0;padding: 0;width: 100% !important;">
  <table class="page" style="width: 100%;border-collapse: collapse;mso-table-lspace: 0pt;mso-table-rspace: 0pt;max-width: 768px;margin: auto;font-family: 'Noto Sans', 'Helvetica Neue', Arial, sans-serif;background: #fff;color: #464646;font-size: 15px;line-height: 1.3;">
    <tr>
      <td class="header" style="border-collapse: collapse;padding: 0;border-bottom: 2px solid #fea030;">
        <table style="width: 100%;border-collapse: collapse;mso-table-lspace: 0pt;mso-table-rspace: 0pt;">
          <tr>
            <td class="page__logo" style="border-collapse: collapse;padding: 15px;width: 36px;">
              <img src="<%= host %>/images/mail/ls.png" width="36" height="36" alt="" style="outline: none;text-decoration: none;border: none;display: block;-ms-interpolation-mode: bicubic;">
            </td>
            <td class="page__header" style="border-collapse: collapse;padding: 15px 15px 15px 0;color: #000;font-size: 14px;">New Comments on LibertySoil.org since <%= since %></td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td class="page__content">
        <% posts.forEach(function (post) { %>
          <hr>
          <%- include('partials/post', { post, host }) %>
        <% }); %>
      </td>
    </tr>
    <!-- <p class="page__content_text" style="margin: 5px 0 0 0;font-size: 16px;line-height: 1.4;"><a href="http://www.libertysoil.com/settings/email" style="text-decoration: underline;color: inherit;">Change email frequency</a> in your account settings.</p> -->
    <%- include('partials/footer', { host }) %>
  </table>
</body>
</html>
